<h3>{{name}}</h3>
{{#unless isExpanded}}
    <span {{action 'toggleExpansion'}}>
        [ Expand ]
    </span>
{{/unless}}

{{#if isExpanded}}
<ul>
    {{#if twitter}}
    <li>
        Twitter:
        <a href="http://twitter.com/{{twitter}}" target="_blank">
            @{{twitter}}
        </a>
    </li>
    {{/if}}
    <li>
        GitHub:
        <a href="http://github.com/{{github}}" target="_blank">
            {{github}}
        </a>
    </li>
</ul>

<span {{action 'toggleExpansion'}}>
    [ Collapse ]
</span>

{{/if}}
{{yield}}